<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:baselineAligned="false">


    <LinearLayout
        android:layout_marginTop="@dimen/check_margin"
        android:paddingTop="@dimen/check_padding"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:baselineAligned="false">

        <ImageView
            android:id="@+id/prepare_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="40px"
            android:src="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/text_change"
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="헬멧을 착용하세요"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="@dimen/check_text"
            />

        <LinearLayout
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:layout_margin="@dimen/stroke_margin"
                android:layout_width="@dimen/stroke_size"
                android:layout_height="@dimen/stroke_size"
                android:background="@drawable/stroke_button_clicked"
                android:id="@+id/prepare_stroke1"
                />

            <Button
                android:layout_margin="@dimen/stroke_margin"
                android:layout_width="@dimen/stroke_size"
                android:layout_height="@dimen/stroke_size"
                android:background="@drawable/stroke_button"
                android:id="@+id/prepare_stroke2"
                />

            <Button
                android:layout_margin="@dimen/stroke_margin"
                android:layout_width="@dimen/stroke_size"
                android:layout_height="@dimen/stroke_size"
                android:background="@drawable/stroke_button"
                android:id="@+id/prepare_stroke3"
                />

            <Button
                android:layout_margin="@dimen/stroke_margin"
                android:layout_width="@dimen/stroke_size"
                android:layout_height="@dimen/stroke_size"
                android:background="@drawable/stroke_button"
                android:id="@+id/prepare_stroke4"
                />

            <!--

            <ImageButton
                android:src="@drawable/ic_menu_camera"
                android:id="@+id/action_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:src="@drawable/ic_menu_gallery"
                android:id="@+id/action_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:src="@drawable/ic_menu_gallery"
                android:id="@+id/action_button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:src="@drawable/ic_menu_gallery"
                android:id="@+id/action_button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

-->
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="착용완료"
            android:textSize="@dimen/check_text"
            android:id="@+id/next_button"
            android:background="@color/button"
            android:textColor="@color/button_font"
            />
</LinearLayout>

</LinearLayout>