<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/bg"
        android:scaleType = "centerCrop" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="bottom"
            android:layout_weight="0.84"
            android:layout_width="435dp"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="환영합니다! 사용자를 등록하고,\n안전한 자전거를 바로 시작해보세요."/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.35"
            android:layout_gravity="center_vertical"
            android:paddingTop="@dimen/check_padding"
            android:paddingRight="@dimen/check_padding2"
            android:paddingLeft="@dimen/check_padding2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="0.3"
                    android:id="@+id/user1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:src="@mipmap/ic_user_profile" />

                <TextView
                    android:onClick="txtClick"
                    android:id="@+id/username1"
                    android:layout_weight="0.5"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/check_padding"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:hint="사용자 추가하기"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <ImageButton
                    android:onClick="btnClick"
                    android:id="@+id/adduser1"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_user_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="0.3"
                    android:id="@+id/user2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:src="@mipmap/ic_user_profile" />

                <TextView
                    android:onClick="txtClick"
                    android:id="@+id/username2"
                    android:layout_weight="0.5"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/check_padding"
                    android:hint="사용자 추가하기"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <ImageButton
                    android:onClick="btnClick"
                    android:id="@+id/adduser2"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_user_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="0.3"
                    android:id="@+id/user3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:src="@mipmap/ic_user_profile" />

                <TextView
                    android:onClick="txtClick"
                    android:id="@+id/username3"
                    android:layout_weight="0.5"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/check_padding"
                    android:hint="사용자 추가하기"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <ImageButton
                    android:onClick="btnClick"
                    android:id="@+id/adduser3"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_user_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>