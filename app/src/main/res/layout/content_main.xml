<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="bottom"
            android:layout_weight="0.65"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/check_text"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="환영합니다! 사용자를 등록하고,\n안전한 자전거를 바로 시작해보세요."/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.35"
            android:layout_gravity="center_vertical"
            android:paddingTop="@dimen/check_padding"
            android:paddingRight="@dimen/check_padding2"
            android:paddingLeft="@dimen/check_padding2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="0.3"
                    android:id="@+id/User1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:src="@android:drawable/sym_def_app_icon" />

                <TextView
                    android:id="@+id/Username1"
                    android:layout_weight="0.5"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/check_padding"
                    android:text="김은지"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <ImageButton
                    android:id="@+id/Adduser1"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="0.3"
                    android:id="@+id/User2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:src="@android:drawable/sym_def_app_icon" />

                <TextView
                    android:id="@+id/Username2"
                    android:layout_weight="0.5"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/check_padding"
                    android:text="김은지"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <ImageButton
                    android:id="@+id/Adduser2"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="0.3"
                    android:id="@+id/User3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:src="@android:drawable/sym_def_app_icon" />

                <TextView
                    android:id="@+id/Username3"
                    android:layout_weight="0.5"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/check_padding"
                    android:text="김은지"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <ImageButton
                    android:id="@+id/Adduser3"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>