<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ccgirls.knu.childcycle">

    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.ccgirls.knu.childcycle.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.ccgirls.knu.childcycle.activity.AdduserActivity"
            android:label="Adduser"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.ccgirls.knu.childcycle.activity.PrepareActivity"
            android:label="PrepareFirst"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.ccgirls.knu.childcycle.activity.RidingMainActivity"
            android:label="RidingMain"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.ccgirls.knu.childcycle.activity.FinishRidingActivity"
            android:label="FinishRiding"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.ccgirls.knu.childcycle.activity.ContentsSettingActivity"
            android:label="ContentsSetting"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--
                <activity
                    android:name=".TempSenseTest"
                    android:label="tempSenseTest">

                </activity>
        -->

        <activity
            android:name="com.ccgirls.knu.childcycle.activity.RecordTableActivity"
            android:label="RecordTableActivity"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>